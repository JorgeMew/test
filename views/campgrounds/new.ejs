<%- include("../partials/header") %>
<div class="container">

	<h1 class="text-center">
		Create a new campground
	</h1>
	<div style="width:30%; margin:30px auto;">
		<form action="/campgrounds/" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="campground[name]" placeholder="name">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01"> <!-- step is to increase decrease the prize  -->
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campground[image]" placeholder="image url">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campground[description]" placeholder="description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">
					Submit!
				</button>
			</div>
			<a href="/campgrounds">Go Back</a>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>