<!DOCTYPE html>
<html>
	<head>
		<title>YelpCamp</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
	</head>
	<body>
		<nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom border-light">
			<div class="container-fluid">
				<div class="navbar-header">
					<a href="/" class="navbar-brand">YelpCamp</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="navbar-nav ml-auto">
						<% if(!currentUser){ %>
							<li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
							<li class="nav-item"><a class="nav-link" href="/register">Sign Up</a></li>
						
						<% }else{ %>
							<li class="nav-item"><a href="#" class="nav-link">Currently signed in as <%= currentUser.username %></a></li>
							<li class="nav-item"><a class="nav-link"href="/logout">Log Out</a></li>
						<% } %>
						
						
					</ul>
				</div>
				
			</div>
		</nav>
		<% if(error && error.length > 0){ %> <!-- iff error has a string inside it then display this -->
		<div class="container">
			<div class="alert alert-danger"><%= error %></div>
		</div>
		<% } %>
		<% if(success && success.length > 0){ %> <!-- iff error has a string inside it then display this -->
		<div class="container">
			<div class="alert alert-success"><%= success %></div>
		</div>
		<% } %>
